@using JustTrade.Helpers
@{
	ViewBag.Title = "Administrate";
    Layout = "~/Views/Shared/_AdminHeader.cshtml";
}

 <script src="Scripts\ajax_tools.js"></script>

<nav class="navbar navbar-default navbar-fixed-top">
	<div class="container">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
				aria-expanded="false" aria-controls="navbar">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<a class="navbar-brand" href="#">JustTrade ( @Lang.Get("Administrate") )</a>
		</div>
		<div id="navbar" class="navbar-collapse collapse">
			<ul class="nav navbar-nav">
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
						@Lang.Get("Management") <span class="caret"></span></a>
					<ul class="dropdown-menu" role="menu">
						<li><a href="#" onclick="GoTo('users')">@Lang.Get("Users")</a></li>
						<li><a href="#">@Lang.Get("Permissions")</a></li>
					</ul>
				</li>

				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
						@Lang.Get("Databases") <span class="caret"></span></a>
					<ul class="dropdown-menu" role="menu">
						<li><a href="#" onclick="GoTo('gendb')">@Lang.Get("Generate database")</a></li>
						<li><a href="#">@Lang.Get("Edit configuration")</a></li>
					</ul>
				</li>

				<li><a href="#">FAQ</a></li>
				<li><a href="#">@Lang.Get("Contacts")</a></li>


				<li id="exit"><a href="#" onclick="GoTo('exit')">@Lang.Get("Exit")</a></li>

				<!-- For examples
				<li class="dropdown">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
						Настроки <span class="caret"></span></a>
					<ul class="dropdown-menu" role="menu">
						<li><a href="#">Action</a></li>
						<li><a href="#">Another action</a></li>
						<li><a href="#">Something else here</a></li>
						<li class="divider"></li>
						<li class="dropdown-header">Nav header</li>
						<li><a href="#">Separated link</a></li>
						<li><a href="#">One more separated link</a></li>
					</ul>
				</li>-->
			</ul>
		</div>
		<!--/.nav-collapse -->
	</div>
</nav>

<div id="main"></div>


<script lang="java script">
	$(document).ready(function () {
		LoadDefaultMenu();
	});

	function GoTo(location) {
		
		switch (location) {
			case "users":
				Load("User/Show");
				break;
			case "gendb":
				Load("Admin/Database");
				break;
			case "exit":
				window.location = "/Home";
				break;

			default:
				alert("ERROR: location not found");
		}
	}

	function Load(url) {
		ShowBlockUI.Show();
		$("#main").load(url,function() {
			$.unblockUI();
		});
	}


	function LoadDefaultMenu() {
		GoTo("users");
	}
</script>
